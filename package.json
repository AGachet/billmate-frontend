{
  "name": "billmate-frontend",
  "version": "0.1.1-alpha",
  "description": "BillMate: Wealth begins with good management. An open-source frontend for managing clients, invoices, and financial tasks.",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/agachet/billmate-frontend"
  },
  "homepage": "https://github.com/agachet/billmate-frontend#readme",
  "bugs": {
    "url": "https://github.com/agachet/billmate-frontend/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "format": "prettier --write .",
    "lint": "eslint .",
    "preview": "vite preview",
    "type-check": "tsc -b",
    "type-check:watch": "tsc -b --watch",
    "prepare": "husky",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:full": "npm run format && npm run lint && npm run type-check && npm run test:e2e",
    "version:manage": "./scripts/tag-manager.sh \"$(git symbolic-ref --short HEAD)\"",
    "postinstall": "if [ \"$HUSKY\" != \"0\" ]; then npx husky install; find .husky -type f -exec chmod +x {} +; if [ -d './scripts' ]; then find ./scripts -type f -name '*.sh' -exec chmod +x {} +; fi; fi"
  },
  "keywords": [
    "billmate",
    "open-source",
    "invoice-management",
    "client-management",
    "frontend",
    "financial-tools",
    "react",
    "tailwindcss"
  ],
  "author": "Your Name <anthony.gachet@diamondforge.fr> (https://agachet.diamondforge.fr)",
  "dependencies": {
    "@hookform/resolvers": "4.1.3",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "1.3.1",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-dialog": "1.1.5",
    "@radix-ui/react-dropdown-menu": "2.1.5",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-scroll-area": "1.2.8",
    "@radix-ui/react-select": "2.2.4",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-tabs": "1.1.11",
    "@radix-ui/react-tooltip": "1.1.7",
    "@tanstack/react-query": "5.67.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "i18next": "24.2.2",
    "i18next-browser-languagedetector": "8.0.2",
    "i18next-resources-to-backend": "1.2.1",
    "js-cookie": "3.0.5",
    "js-yaml": "4.1.0",
    "lucide-react": "0.474.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "react-i18next": "15.4.0",
    "react-router-dom": "7.1.5",
    "tailwind-merge": "2.6.0",
    "tailwindcss": "3.4.17",
    "tailwindcss-animate": "1.0.7",
    "yaml": "2.7.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.19.0",
    "@playwright/test": "1.51.1",
    "@types/js-cookie": "3.0.6",
    "@types/js-yaml": "4.0.9",
    "@types/node": "22.10.10",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react-swc": "3.7.2",
    "autoprefixer": "10.4.20",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jsonc": "2.19.1",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.18",
    "globals": "15.14.0",
    "husky": "8.0.0",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.11",
    "terser": "5.39.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.21.0",
    "vite": "6.0.11"
  }
}
